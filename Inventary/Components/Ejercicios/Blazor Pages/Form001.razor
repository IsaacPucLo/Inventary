<h1>Reto 1</h1>

<input type="text" @bind-value="@newMessage" />
<input type="button" value="Insertar" @onclick="ChangeText" />

<SurveyPrompt textBody="@message" />

@code{
    [Parameter]
    public string Message { get; set; }     //Parameter viene siendo un atributo el cual le puedo asignar valor desde donde se haga el llamado a este componente

    string message = "Este es un mensaje por default";
    string newMessage = "";

    protected override async Task OnInitializedAsync() {    //Los metodos asincronos se usan de tipo Task, NO Void
        message = Message;
    }

    private void ChangeText() {
        message = newMessage;
    }

}
